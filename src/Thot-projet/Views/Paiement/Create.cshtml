@{
    ViewBag.Title = "Paiement";
    var montant = (decimal)ViewBag.Montant;
    var monnaie = (string)ViewBag.Monnaie;
    var statut = (string)ViewBag.Statut;
}
<h2>Paiement</h2>

@using (Html.BeginForm("Create", "Paiement", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2">Montant</label>
            <div class="col-md-4">
                <input type="text" name="Montant" value="@montant.ToString("0.00")" class="form-control" />
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Monnaie</label>
            <div class="col-md-4">
                <select name="Monnaie" class="form-control">
                    @foreach (var m in (string[])ViewBag.Monnaies)
                    {
                        <option value="@m" @(m == monnaie ? "selected" : "")>@m</option>
}
                </select>
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Statut</label>
            <div class="col-md-4">
                <select name="Statut" class="form-control">
                    @foreach (var s in (string[])ViewBag.Statuts)
                    {
                        <option value="@s" @(s == statut ? "selected" : "")>@s</option>
}
                </select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <button type="submit" class="btn btn-success">Payer</button>
                <a href="@Url.Action("Index","Inscription")" class="btn btn-default">Annuler</a>
            </div>
        </div>
    </div>
}
