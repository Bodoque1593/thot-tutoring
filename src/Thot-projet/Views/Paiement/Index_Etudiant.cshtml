@model IEnumerable<Thot_projet.Models.Paiement>
@{
    ViewBag.Title = "Mes paiements";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var total = Model.Sum(p => p.Montant);
}
<h2>Mes paiements</h2>

<p>@Html.ActionLink("Nouveau paiement", "Create", null, new { @class = "btn btn-success" })</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr><th>Montant</th><th>Monnaie</th><th>Statut</th><th>Payé le</th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Montant.ToString("0.00")</td>
                <td>@p.Monnaie</td>
                <td>
                    @if (string.Equals(p.Statut, "Payé", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="label label-success">Payé</span>
                    }
                    else if (string.Equals(p.Statut, "En attente", StringComparison.OrdinalIgnoreCase))
                    {
                        <span class="label label-warning">En attente</span>
                    }
                    else
                    {
                        <span class="label label-default">@p.Statut</span>
                    }
                </td>
                <td>@p.PayeLe.ToString("yyyy-MM-dd HH:mm")</td>
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <th colspan="3" class="text-right">Total</th>
            <th>@total.ToString("0.00")</th>
        </tr>
    </tfoot>
</table>
