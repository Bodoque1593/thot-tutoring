@model IEnumerable<Thot_projet.Models.Paiement>
@{ ViewBag.Title = "Mes paiements"; }
<h2>Mes paiements</h2>
@if (!Model.Any())
{
    <div class="alert alert-info">Aucun paiement pour l’instant.</div>
}
else
{
    <table class="table table-striped">
        <thead><tr><th>Montant</th><th>Monnaie</th><th>Statut</th><th>Date</th></tr></thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Montant.ToString("C")</td>
                    <td>@p.Monnaie</td>
                    <td>@p.Statut</td>
                    <td>@p.PayeLe.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                </tr>
            }
        </tbody>
    </table>
}
