@model IEnumerable<Thot_projet.Models.Question>
@{
    ViewBag.Title = "Questions non résolues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .page-head {
        margin-bottom: 16px;
    }

        .page-head h2 {
            margin: 0 0 6px;
        }

    .soft-hr {
        margin: 8px 0 16px;
    }
</style>

<div class="page-head">
    <h2>Questions non résolues</h2>
    <hr class="soft-hr" />
</div>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">
        <span class="glyphicon glyphicon-ok-sign"></span> @TempData["ok"]
    </div>
}
@if (TempData["err"] != null)
{
    <div class="alert alert-danger">
        <span class="glyphicon glyphicon-exclamation-sign"></span> @TempData["err"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <p><em>Aucune question ouverte.</em></p>
}
else
{
    <div class="thot-card">
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Étudiant</th>
                    <th>Cours</th>
                    <th>Ressource</th>
                    <th>Créée le</th>
                    <th style="width:120px;"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var q in Model.OrderByDescending(x => x.Creele))
                {
                    var etuNom = q.Etudiant != null
                        ? (string.IsNullOrWhiteSpace(q.Etudiant.Nomcomplet)
                            ? (q.Etudiant.Email ?? "-")
                            : q.Etudiant.Nomcomplet)
                        : "-";
                    var coursNom = q.Cours != null ? (q.Cours.Nom ?? "-") : "-";
                    var resTitre = q.Ressource != null ? (q.Ressource.Titre ?? "-") : "-";

                    <tr>
                        <td>@etuNom</td>
                        <td>@coursNom</td>
                        <td>@resTitre</td>
                        <td>@q.Creele.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            @Html.ActionLink(
                                "Répondre",
                                "Details",
                                "Question",
                                new { id = q.id },
                                new { @class = "btn btn-thot-primary btn-xs" }
                            )
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
