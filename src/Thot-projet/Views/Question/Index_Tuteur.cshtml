@model IEnumerable<Thot_projet.Models.Question>
@{
    ViewBag.Title = "Questions non résolues";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Questions non résolues</h2>

@if (!Model.Any())
{
    <p><em>Aucune question ouverte.</em></p>
}
else
{
    <table class="table table-striped table-bordered">
        <thead>
            <tr><th>Étudiant</th><th>Cours</th><th>Ressource</th><th>Créée le</th><th></th></tr>
        </thead>
        <tbody>
            @foreach (var q in Model.OrderByDescending(x => x.Creele))
            {
                <tr>
                    <td>@(q.Etudiant?.Nomcomplet ?? q.Etudiant?.Email ?? "-")</td>
                    <td>@(q.Cours?.Nom ?? "-")</td>
                    <td>@(q.Ressource?.Titre ?? "-")</td>
                    <td>@q.Creele.ToString("yyyy-MM-dd HH:mm")</td>
                    <td>@Html.ActionLink("Répondre", "Details", new { id = q.id })</td>
                </tr>
            }
        </tbody>
    </table>
}
