@model Thot_projet.Models.Question
@{
    ViewBag.Title = "Poser une question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Poser une question</h2>

@using (Html.BeginForm("Create", "Question", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Cours")
        @Html.DropDownList("CoursId", (SelectList)ViewBag.Cours, "-- choisissez --",
                           new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.Label("Ressource")
        @Html.DropDownList("RessourceId", (SelectList)ViewBag.Ressources, "-- choisissez --",
                           new { @class = "form-control", required = "required" })
        <p class="help-block">* Pour l’instant la ressource est requise (contrainte du modèle).</p>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Contenu)
        @Html.TextAreaFor(m => m.Contenu, 6, 80, new { @class = "form-control", required = "required" })
    </div>

    <button type="submit" class="btn btn-success">Envoyer</button>
    @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-default", style = "margin-left:8px" })
}
