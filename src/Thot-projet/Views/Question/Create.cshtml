@model Thot_projet.Models.Question
@{
    ViewBag.Title = "Poser une question";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .page-head {
        margin-bottom: 16px;
    }

        .page-head h2 {
            margin: 0 0 6px;
        }

    .soft-hr {
        margin: 8px 0 16px;
    }
</style>

<div class="page-head">
    <h2>Poser une question</h2>
    <hr class="soft-hr" />
</div>

<div class="thot-card thot-auth-card">
    @using (Html.BeginForm("Create", "Question", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Cours", new { @class = "thot-label" })
            @Html.DropDownList(
                "CoursId",
                (SelectList)ViewBag.Cours,
                "-- choisissez --",
                new { @class = "form-control thot-input", required = "required" }
            )
        </div>

        <div class="form-group">
            @Html.Label("Ressource", new { @class = "thot-label" })
            @Html.DropDownList(
                "RessourceId",
                (SelectList)ViewBag.Ressources,
                "-- choisissez --",
                new { @class = "form-control thot-input", required = "required" }
            )
            <p class="thot-help">* Pour l’instant la ressource est requise (contrainte du modèle).</p>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Contenu, new { @class = "thot-label" })
            @Html.TextAreaFor(m => m.Contenu, 6, 80, new { @class = "form-control thot-input", required = "required" })
        </div>

        <button type="submit" class="btn btn-thot-primary">Envoyer</button>
        @Html.ActionLink(
            "Retour",
            "Index",
            null,
            new { @class = "btn btn-thot-ghost", style = "margin-left:8px" }
        )
    }
    }
