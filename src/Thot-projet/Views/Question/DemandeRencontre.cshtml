@{
    ViewBag.Title = "Demander une rencontre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .page-head {
        margin-bottom: 16px;
    }

        .page-head h2 {
            margin: 0 0 6px;
        }

    .soft-hr {
        margin: 8px 0 16px;
    }
</style>

<div class="page-head">
    <h2>Demander une rencontre</h2>
    <hr class="soft-hr" />
</div>

<div class="thot-card thot-auth-card">
    @using (Html.BeginForm("DemandeRencontre", "Question", FormMethod.Post, new { @class = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.Label("Cours", new { @class = "thot-label" })
            @Html.DropDownList(
                "CoursId",
                (SelectList)ViewBag.Cours,
                "-- choisissez --",
                new { @class = "form-control thot-input", required = "required" }
            )
        </div>

        <div class="form-group">
            @Html.Label("Ressource", new { @class = "thot-label" })
            @Html.DropDownList(
                "RessourceId",
                (SelectList)ViewBag.Ressources,
                "-- choisissez --",
                new { @class = "form-control thot-input", required = "required" }
            )
            <p class="thot-help">* On rattache la demande à une ressource du cours.</p>
        </div>

        <div class="form-group">
            @Html.Label("Date et heure (souhaitées)", new { @class = "thot-label" })
            <input type="datetime-local" name="DateHeure" class="form-control thot-input" />
        </div>

        <div class="form-group">
            @Html.Label("Lieu", new { @class = "thot-label" })
            <input type="text" name="Lieu" class="form-control thot-input" placeholder="Campus / Bibliothèque / Café..." required />
        </div>

        <div class="form-group">
            @Html.Label("Note (optionnelle)", new { @class = "thot-label" })
            <textarea name="Note" class="form-control thot-input" rows="3" placeholder="Informations supplémentaires..."></textarea>
        </div>

        <button type="submit" class="btn btn-thot-primary">Envoyer</button>
        @Html.ActionLink(
            "Annuler",
            "Index",
            "Question",
            null,
            new { @class = "btn btn-thot-ghost", style = "margin-left:8px;" }
        )
    }
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
