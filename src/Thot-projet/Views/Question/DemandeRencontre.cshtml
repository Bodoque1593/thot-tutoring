@{
    ViewBag.Title = "Demander une rencontre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Demander une rencontre</h2>

@using (Html.BeginForm("DemandeRencontre", "Question", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Cours")
        @Html.DropDownList("CoursId", (SelectList)ViewBag.Cours, "-- choisissez --", new { @class = "form-control", required = "required" })
    </div>

    <div class="form-group">
        @Html.Label("Ressource")
        @Html.DropDownList("RessourceId", (SelectList)ViewBag.Ressources, "-- choisissez --", new { @class = "form-control", required = "required" })
        <p class="help-block">* On rattache la demande à une ressource du cours.</p>
    </div>

    <div class="form-group">
        @Html.Label("Date et heure (souhaitées)")
        <input type="datetime-local" name="DateHeure" class="form-control" />
    </div>

    <div class="form-group">
        @Html.Label("Lieu")
        <input type="text" name="Lieu" class="form-control" placeholder="Campus / Bibliothèque / Café..." required />
    </div>

    <div class="form-group">
        @Html.Label("Note (optionnelle)")
        <textarea name="Note" class="form-control" rows="3" placeholder="Informations supplémentaires..."></textarea>
    </div>

    <button type="submit" class="btn btn-success">Envoyer</button>
    @Html.ActionLink("Annuler", "Index", "Question", null, new { @class = "btn btn-default", style = "margin-left:8px;" })
}

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
