@model Thot_projet.Models.Question
@using System.Linq
@{
    ViewBag.Title = "Détails de la question";

    var coursNom = (Model?.Ressource?.ModuleCours?.Cours?.Nom) ?? (Model?.Cours?.Nom) ?? "--";
    var resTitre = (Model?.Ressource?.Titre) ?? "Ressource";
    var routeId = ViewContext.RouteData.Values["id"]?.ToString() ?? "";
}
<h2>Détails de la question</h2>

@if (TempData["ok"] != null)
{<div class="alert alert-success">@TempData["ok"]</div>}
@if (TempData["err"] != null)
{<div class="alert alert-danger">@TempData["err"]</div>}

<div class="panel panel-default">
    <div class="panel-heading">
        <strong>@coursNom</strong> · Ressource : @resTitre
        @if (Model?.EstResolvee == true)
        {<span class="label label-success" style="margin-left:8px;">Résolue</span> }
        else
        { <span class="label label-warning" style="margin-left:8px;">Ouverte</span>}
    </div>
    <div class="panel-body">
        <p>@(Model?.Contenu ?? "")</p>
    </div>
</div>

<h3>Réponses</h3>
@{
    var reps = Model?.Reponses ?? Enumerable.Empty<Thot_projet.Models.Reponse>();
}
@if (!reps.Any())
{
    <p>Aucune réponse pour l'instant.</p>
}
else
{
    <ul class="list-group">
        @foreach (var r in reps)
        {
            <li class="list-group-item"><div>@r.Contenu</div></li>
        }
    </ul>
}

@if (Model != null && !Model.EstResolvee)
{
    <h3>Répondre</h3>
    using (Html.BeginForm("Answer", "Question", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("id", Model.id)

        <!-- FR: champ vide pour ne pas réutiliser le texte précédent -->
        <textarea name="contenu" class="form-control" rows="3"
                  placeholder="Écrire votre réponse..."></textarea>

        <!-- FR: par défaut on coche pour marquer comme résolue -->
        <div class="checkbox" style="margin-top:8px">
            <label>
                <input type="checkbox" name="resoudre" checked />
                Marquer la question comme résolue
            </label>
        </div>

        <button type="submit" class="btn btn-success" style="margin-top:8px">Répondre</button>
        @Html.ActionLink("Retour", "Index_Tuteur", "Question", null, new { @class = "btn btn-default", style = "margin-top:8px;margin-left:8px" })
    }
}
