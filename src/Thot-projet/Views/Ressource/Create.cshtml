@model Thot_projet.Models.Ressource
@{
    ViewBag.Title = "Créer une ressource";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Créer une ressource</h2>

@using (Html.BeginForm("Create", "Ressource", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    <div class="form-group">
        @Html.Label("Module", new { @class = "control-label col-md-2" })
        <div class="col-md-10">@Html.DropDownList("ModuleCoursId", null, "-- choisissez un module --", new { @class = "form-control" })</div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Type, new { @class = "control-label col-md-2" })
        <div class="col-md-10">@Html.TextBoxFor(m => m.Type, new { @class = "form-control", placeholder = "Vidéo / PDF / Lien" })</div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Titre, new { @class = "control-label col-md-2" })
        <div class="col-md-10">@Html.TextBoxFor(m => m.Titre, new { @class = "form-control", placeholder = "Titre de la ressource" })</div>
    </div>

    <div class="form-group">
        @Html.Label("Fichier (PDF) ou URL", new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            <input type="file" name="fichier" accept="application/pdf" class="form-control" />
            <span class="help-block">Si no subes archivo, usa el campo URL.</span>
            @Html.TextBoxFor(m => m.url, new { @class = "form-control", placeholder = "https://..." })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Enregistrer</button>
            @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-default", style = "margin-left:8px;" })
        </div>
    </div>
}
