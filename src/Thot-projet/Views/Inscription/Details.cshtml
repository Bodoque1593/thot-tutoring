@model Thot_projet.Models.Inscription
@{
    ViewBag.Title = "Détails de l'inscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h2>Détails</h2>
    <small>Information sur cette inscription</small>
    <hr class="soft-hr" />
</div>

<div class="thot-card">
    <dl class="dl-horizontal">
        <dt class="thot-label">Étudiant</dt>
        <dd>@(Model.Utilisateur?.Nomcomplet)</dd>
        <dt class="thot-label">Cours</dt>
        <dd>@(Model.Cours?.Nom)</dd>
        <dt class="thot-label">Inscrit le</dt>
        <dd>@Model.InscritLe.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <p>@Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-thot-ghost" })</p>
</div>
