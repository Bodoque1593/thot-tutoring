@model IEnumerable<Thot_projet.Controllers.BrowseCoursVM>
@{
    ViewBag.Title = "S'inscrire à un cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>S'inscrire à un cours</h2>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Cours</th>
            <th>Niveau</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.Nom</td>
                <td>@c.Niveau</td>
                <td>
                    @if (c.DejaInscrit)
                    {
                        <span class="label label-default">Déjà inscrit</span>
                    }
                    else
                    {
                        using (Html.BeginForm("Enroll", "Inscription", FormMethod.Post, new { @class = "form-inline" }))
                        {
                            @Html.AntiForgeryToken()
                            @Html.Hidden("coursId", c.CoursId)
                            <button type="submit" class="btn btn-primary btn-sm">S'inscrire</button>
                        }
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
