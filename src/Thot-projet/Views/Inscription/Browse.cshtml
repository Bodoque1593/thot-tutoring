@model IEnumerable<Thot_projet.Models.InscriptionBrowseVM>
@using System.Globalization

@{
    ViewBag.Title = "S'inscrire à un cours";
    var culture = new CultureInfo("fr-CA"); // para mostrar CAD
}

<h2>Catalogue de cours</h2>
<hr />

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Aucun cours disponible pour le moment.</div>
}
else
{
    <div class="row">
        @foreach (var v in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="panel panel-default" style="height:100%;">
                    <div class="panel-heading">
                        <strong>@v.Nom</strong>
                        <span class="pull-right label label-default">Niveau @v.Niveau</span>
                    </div>
                    <div class="panel-body">
                        <div class="text-center" style="margin-bottom:10px;">
                            @{
                                var img = string.IsNullOrWhiteSpace(v.ImageUrl)
                                          ? "https://via.placeholder.com/400x220?text=Cours"
                                          : v.ImageUrl;
                            }
                            <img src="@img" class="img-responsive img-thumbnail" style="max-height:220px; margin:0 auto;" />
                        </div>

                        @if (!string.IsNullOrWhiteSpace(v.Description))
                        {
                            <p style="min-height:48px;">@v.Description</p>
                        }

                        <p>
                            <span class="h4">@v.Prix.ToString("C", culture)</span>
                            <span class="text-muted"> CAD</span>
                        </p>
                    </div>
                    <div class="panel-footer">
                        @if (v.DejaInscrit)
                        {
                            <span class="label label-success">Déjà inscrit</span>
                            @Html.ActionLink("Mes cours", "Index", "Inscription", null, new { @class = "btn btn-link btn-xs pull-right" })
                        }
                        else
                        {
                            @* IMPORTANTE: estamos dentro de un bloque de código (if). Aquí el using va SIN @ *@
                            using (Html.BeginForm("Enroll", "Inscription", FormMethod.Post, new { @class = "form-inline" }))
                            {
                                @Html.AntiForgeryToken()
                                @Html.Hidden("coursId", v.CoursId)
                                <button type="submit" class="btn btn-primary btn-sm">
                                    S'inscrire
                                </button>
                            }
                        }
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        }
    </div>
}
