@model IEnumerable<Thot_projet.Models.Inscription>
@using System.Globalization

@{
    ViewBag.Title = "Mes cours";
}

<h2>Mes cours</h2>
<hr />

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">
        <span class="glyphicon glyphicon-ok-sign"></span> @TempData["ok"]
    </div>
}
@if (TempData["err"] != null)
{
    <div class="alert alert-danger">
        <span class="glyphicon glyphicon-exclamation-sign"></span> @TempData["err"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info">Vous n’êtes inscrit à aucun cours.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Cours</th>
                <th>Niveau</th>
                <th>Inscrit le</th>
                <th style="width:160px">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var i in Model)
            {
                var c = i.Cours; // puede llegar null si el cours fue supprimé
                <tr>
                    <td>
                        @if (c != null)
                        {
                            @Html.ActionLink(c.Nom, "Details", "Cours", new { id = c.id }, null)
                        }
                        else
                        {
                            <em>(cours supprimé)</em>
                        }
                    </td>
                    <td>@(c?.Niveau ?? "-")</td>
                    <td>@i.InscritLe.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (c != null)
                        {
                            @Html.ActionLink("Voir", "Details", "Cours", new { id = c.id }, new { @class = "btn btn-default btn-xs" })
                        }
                        @Html.ActionLink("Questions", "Index", "Question", null, new { @class = "btn btn-primary btn-xs", style = "margin-left:6px" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
