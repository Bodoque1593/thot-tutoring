@model IEnumerable<Thot_projet.Models.Inscription>
@{
    ViewBag.Title = "Mes cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h2>Mes cours</h2>
    <small>Liste des cours auxquels vous êtes inscrit</small>
    <hr class="soft-hr" />
</div>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">
        <span class="glyphicon glyphicon-ok-sign"></span> @TempData["ok"]
    </div>
}
@if (TempData["err"] != null)
{
    <div class="alert alert-danger">
        <span class="glyphicon glyphicon-exclamation-sign"></span> @TempData["err"]
    </div>
}

@if (Model == null || !Model.Any())
{
    <div class="thot-card">
        <p class="thot-help">Vous n’êtes inscrit à aucun cours.</p>
    </div>
}
else
{
    <div class="thot-card">
        <table class="table table-striped table-hover" style="margin-bottom:0;">
            <thead>
                <tr>
                    <th>Cours</th>
                    <th>Niveau</th>
                    <th>Inscrit le</th>
                    <th style="width:160px">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model)
                {
                    var c = i.Cours;
                    <tr>
                        <td>
                            @if (c != null)
                            {
                                @Html.ActionLink(c.Nom, "Details", "Cours", new { id = c.id }, null)
                            }
                            else
                            {
                                <em>(cours supprimé)</em>
                            }
                        </td>
                        <td>@(c?.Niveau ?? "-")</td>
                        <td>@i.InscritLe.ToString("yyyy-MM-dd")</td>
                        <td>
                            @if (c != null)
                            {
                                @Html.ActionLink("Voir", "Details", "Cours", new { id = c.id }, new { @class = "btn btn-thot-ghost btn-xs" })
                            }
                            @Html.ActionLink("Questions", "Index", "Question", null, new { @class = "btn btn-thot-primary btn-xs", style = "margin-left:6px" })
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
