@model Thot_projet.Models.Inscription
@{
    ViewBag.Title = "Supprimer l'inscription";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h2>Supprimer</h2>
    <small>Confirmez la suppression de cette inscription</small>
    <hr class="soft-hr" />
</div>

<div class="thot-card">
    <p>Êtes-vous sûr de vouloir supprimer cette inscription ?</p>

    <dl class="dl-horizontal" style="margin-top:15px;">
        <dt class="thot-label">Étudiant</dt>
        <dd>@(Model.Utilisateur?.Nomcomplet)</dd>
        <dt class="thot-label">Cours</dt>
        <dd>@(Model.Cours?.Nom)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.id)
        <input type="submit" value="Supprimer" class="btn btn-danger" />
        @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-thot-ghost", style = "margin-left:8px;" })
    }
</div>
