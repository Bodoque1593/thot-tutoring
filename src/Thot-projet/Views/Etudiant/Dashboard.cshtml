@model Thot_projet.Models.EtudiantDashboardVM
@{
    ViewBag.Title = "Espace étudiant";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Espace étudiant</h2>

<div class="row">
    <div class="col-md-6">
        <h3>Mes cours (inscriptions)</h3>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Cours</th>
                    <th>Niveau</th>
                    <th>Inscrit le</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var i in Model.MesInscriptions)
                {
                    <tr>
                        <td>@(i.Cours != null ? i.Cours.Nom : "-")</td>
                        <td>@(i.Cours != null ? i.Cours.Niveau : "-")</td>
                        <td>@i.InscritLe.ToString("yyyy-MM-dd")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="col-md-6">
        <h3>Mes questions</h3>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Cours</th>
                    <th>Ressource</th>
                    <th>Créée le</th>
                    <th>État</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var q in Model.MesQuestions)
                {
                    <tr>
                        <td>@(q.Cours != null ? q.Cours.Nom : "-")</td>
                        <td>@(q.Ressource != null ? q.Ressource.Titre : "-")</td>
                        <td>@q.Creele.ToString("yyyy-MM-dd HH:mm")</td>
                        <td>@(q.EstResolvee ? "Résolue" : "Ouverte")</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
