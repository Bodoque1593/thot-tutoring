@model Thot_projet.Models.RegisterViewModel
@{
    ViewBag.Title = "Créer un compte";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h2>Créer un compte</h2>
    <small>Rejoignez la communauté Thot pour enseigner ou apprendre</small>
    <hr class="soft-hr" />
</div>

<div class="thot-card thot-auth-card">
    @using (Html.BeginForm("Register", "Auth", FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "thot-label" })
            @Html.TextBoxFor(
                m => m.Email,
                new
                {
                    @class = "form-control thot-input",
                    placeholder = "exemple@thot.com",
                    autofocus = "autofocus"
                })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Nomcomplet, new { @class = "thot-label" })
            @Html.TextBoxFor(
                m => m.Nomcomplet,
                new
                {
                    @class = "form-control thot-input",
                    placeholder = "Nom et prénom"
                })
            @Html.ValidationMessageFor(m => m.Nomcomplet, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Role, "Rôle", new { @class = "thot-label" })
            @Html.DropDownListFor(
                m => m.Role,
                new SelectList(new[] { "Etudiant", "Tuteur" }),
                "-- choisissez votre rôle --",
                new { @class = "form-control thot-input" }
            )
            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Motdepasse, new { @class = "thot-label" })
            @Html.PasswordFor(
                m => m.Motdepasse,
                new
                {
                    @class = "form-control thot-input",
                    id = "pwd",
                    placeholder = "Mot de passe"
                })
            @Html.ValidationMessageFor(m => m.Motdepasse, "", new { @class = "text-danger" })

            <div style="margin-top:8px;">
                <button type="button" id="btnGenLocal" class="btn btn-xs btn-thot-ghost">
                    Générer un mot de passe
                </button>
                <button type="button" id="btnToggle" class="btn btn-xs btn-thot-ghost">
                    Afficher / masquer
                </button>
            </div>
            <small class="thot-help">
                Un mot de passe robuste est généré localement, sans quitter votre navigateur.
            </small>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmMotdepasse, new { @class = "thot-label" })
            @Html.PasswordFor(
                m => m.ConfirmMotdepasse,
                new
                {
                    @class = "form-control thot-input",
                    id = "pwd2",
                    placeholder = "Confirmer le mot de passe"
                })
            @Html.ValidationMessageFor(m => m.ConfirmMotdepasse, "", new { @class = "text-danger" })
        </div>

        <button type="submit" class="btn btn-thot-primary btn-block">
            Créer mon compte
        </button>
        @Html.ActionLink(
            "J’ai déjà un compte",
            "Login",
            "Auth",
            null,
            new { @class = "btn btn-link thot-help", style = "margin-top:8px;" }
        )
    }
</div>

@section Scripts {
    <script>
        (function () {
            function genLocal(len) {
                var chars = "ABCDEFGHJKLMNPQRSTUVWXYZabcdefghijkmnopqrstuvwxyz23456789!#$%*-_";
                var out = "";
                for (var i = 0; i < len; i++) {
                    out += chars.charAt(Math.floor(Math.random() * chars.length));
                }
                return out;
            }

            var pwd = document.getElementById("pwd");
            var pwd2 = document.getElementById("pwd2");
            var gen = document.getElementById("btnGenLocal");
            var tog = document.getElementById("btnToggle");

            if (gen && pwd) {
                gen.addEventListener("click", function () {
                    pwd.value = genLocal(12);
                    pwd.type = "text";
                    if (pwd2) pwd2.value = "";
                    pwd.focus();
                    pwd.select();
                });
            }

            if (tog && pwd) {
                tog.addEventListener("click", function () {
                    pwd.type = (pwd.type === "password" ? "text" : "password");
                });
            }
        })();
    </script>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
