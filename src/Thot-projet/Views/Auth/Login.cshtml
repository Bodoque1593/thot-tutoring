@model Thot_projet.Models.LoginViewModel
@{
    ViewBag.Title = "Connexion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h2>Connexion</h2>
    <small>Accédez à votre espace Thot (étudiant ou tuteur)</small>
    <hr class="soft-hr" />
</div>

<div class="thot-card thot-auth-card">
    @using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "form", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "thot-label" })
            @Html.TextBoxFor(
                m => m.Email,
                new
                {
                    @class = "form-control thot-input",
                    placeholder = "exemple@thot.com",
                    autofocus = "autofocus"
                })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Motdepasse, new { @class = "thot-label" })
            @Html.PasswordFor(
                m => m.Motdepasse,
                new
                {
                    @class = "form-control thot-input",
                    id = "pwd",
                    placeholder = "Mot de passe"
                })
            @Html.ValidationMessageFor(m => m.Motdepasse, "", new { @class = "text-danger" })

            <div style="margin-top:8px;">
                <button type="button" id="btnToggle" class="btn btn-xs btn-thot-ghost">
                    Afficher / masquer le mot de passe
                </button>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Role, "Rôle", new { @class = "thot-label" })
            @Html.DropDownListFor(
                m => m.Role,
                new SelectList(new[] { "Etudiant", "Tuteur" }),
                "-- choisissez votre rôle --",
                new { @class = "form-control thot-input" }
            )
            @Html.ValidationMessageFor(m => m.Role, "", new { @class = "text-danger" })
        </div>

        <div class="checkbox">
            <label class="thot-help">
                @Html.CheckBoxFor(m => m.Mesouvenir)
                @Html.DisplayNameFor(m => m.Mesouvenir)
            </label>
        </div>

        <button type="submit" class="btn btn-thot-primary btn-block">
            Se connecter
        </button>

        <p style="margin-top:12px" class="thot-help">
            Pas de compte ?
            @Html.ActionLink("Créer un compte", "Register", "Auth", null, new { @class = "text-warning" })
        </p>
    }
</div>

@section Scripts {
    <script>
        (function () {
            var pwd = document.getElementById("pwd");
            var btn = document.getElementById("btnToggle");
            if (pwd && btn) {
                btn.addEventListener("click", function () {
                    pwd.type = (pwd.type === "password" ? "text" : "password");
                });
            }
        })();
    </script>
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
}
