@model Thot_projet.Models.Cours
@using System.Globalization
@{
    ViewBag.Title = "Cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fr = CultureInfo.GetCultureInfo("fr-CA");
    var img = string.IsNullOrWhiteSpace(Model.ImageUrl)
        ? "https://via.placeholder.com/800x300?text=Cours"
        : Model.ImageUrl;
}
<style>
    .page-head {
        margin-bottom: 16px;
    }

        .page-head h2 {
            margin: 0 0 6px;
        }

    .soft-hr {
        margin: 8px 0 16px;
    }
</style>

<div class="page-head">
    <h2>Cours</h2>
    <hr class="soft-hr" />
</div>

<div class="row">
    <div class="col-md-7">
        <dl class="dl-horizontal">
            <dt>Nom</dt>
            <dd>@Model.Nom</dd>

            <dt>Niveau</dt>
            <dd>@Model.Niveau</dd>

            <dt>Prix</dt>
            <dd>@Model.Prix.ToString("C", fr) <span class="text-muted">CAD</span></dd>

            <dt>Description</dt>
            <dd>@(string.IsNullOrWhiteSpace(Model.Description) ? "-" : Model.Description)</dd>
        </dl>

        <p>
            @Html.ActionLink("Retourner à la liste", "Index", null, new { @class = "btn btn-default" })
            @Html.ActionLink("Éditer", "Edit", new { id = Model.id }, new { @class = "btn btn-primary", style = "margin-left:8px;" })
        </p>
    </div>
    <div class="col-md-5">
        <img src="@img" class="img-responsive img-thumbnail" alt="Image cours" />
    </div>
</div>

@if (Model.Modules != null && Model.Modules.Any())
{
    <hr />
    <h4>Modules</h4>
    <ul class="list-group">
        @foreach (var m in Model.Modules.OrderBy(x => x.Numero))
        {
            <li class="list-group-item">
                <strong>Module @m.Numero:</strong> @m.Titre
            </li>
        }
    </ul>
}
