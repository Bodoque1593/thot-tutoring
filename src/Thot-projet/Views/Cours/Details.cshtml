@model Thot_projet.Models.Cours
@using System.Globalization
@{
    ViewBag.Title = "Cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var fr = CultureInfo.GetCultureInfo("fr-CA");
    var img = string.IsNullOrWhiteSpace(Model.ImageUrl)
        ? "https://via.placeholder.com/800x300?text=Cours"
        : Model.ImageUrl;
}

<div class="page-head">
    <h2>Cours</h2>
    <small>Détails du cours</small>
    <hr class="soft-hr" />
</div>

<div class="row">
    <div class="col-md-7">
        <div class="thot-card">
            <dl class="dl-horizontal">
                <dt class="thot-label">Nom</dt>
                <dd>@Model.Nom</dd>

                <dt class="thot-label">Niveau</dt>
                <dd><span class="thot-badge">@Model.Niveau</span></dd>

                <dt class="thot-label">Prix</dt>
                <dd>
                    @Model.Prix.ToString("C", fr)
                    <span class="thot-help">CAD</span>
                </dd>

                <dt class="thot-label">Description</dt>
                <dd>@(string.IsNullOrWhiteSpace(Model.Description) ? "-" : Model.Description)</dd>
            </dl>

            <p style="margin-top:12px;">
                @Html.ActionLink("Retourner à la liste", "Index", null, new { @class = "btn btn-thot-ghost" })
                @Html.ActionLink("Éditer", "Edit", new { id = Model.id }, new { @class = "btn btn-thot-primary", style = "margin-left:8px;" })
            </p>
        </div>
    </div>
    <div class="col-md-5">
        <div class="thot-card" style="padding:10px;">
            <img src="@img" class="img-responsive img-thumbnail" alt="Image cours" />
        </div>
    </div>
</div>

@if (Model.Modules != null && Model.Modules.Any())
{
    <hr class="soft-hr" />
    <h4>Modules</h4>
    <ul class="list-group">
        @foreach (var m in Model.Modules.OrderBy(x => x.Numero))
        {
            <li class="list-group-item">
                <strong>Module @m.Numero :</strong> @m.Titre
            </li>
        }
    </ul>
}
