@model Thot_projet.Models.Cours
@{
    ViewBag.Title = "Créer un cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h2>Créer un cours</h2>
    <small>Ajoutez un nouveau cours à la plateforme Thot</small>
    <hr class="soft-hr" />
</div>

<div class="thot-card">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            @Html.ValidationSummary(false, "", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Nom, new { @class = "control-label col-md-2 thot-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Nom, new { @class = "form-control thot-input", placeholder = "Nom du cours" })
                    @Html.ValidationMessageFor(m => m.Nom, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Niveau, new { @class = "control-label col-md-2 thot-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Niveau, new { @class = "form-control thot-input", placeholder = "Niveau du cours" })
                    @Html.ValidationMessageFor(m => m.Niveau, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Prix, new { @class = "control-label col-md-2 thot-label" })
                <div class="col-md-4">
                    @Html.TextBoxFor(m => m.Prix, new { @class = "form-control thot-input", type = "number", step = "0.01", min = "0" })
                    @Html.ValidationMessageFor(m => m.Prix, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ImageUrl, new { @class = "control-label col-md-2 thot-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control thot-input", placeholder = "https://..." })
                    @Html.ValidationMessageFor(m => m.ImageUrl, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "control-label col-md-2 thot-label" })
                <div class="col-md-10">
                    @Html.TextAreaFor(m => m.Description, 4, 60, new { @class = "form-control thot-input", placeholder = "Description du cours" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Créer" class="btn btn-thot-primary" />
                    @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-thot-ghost", style = "margin-left:8px;" })
                </div>
            </div>
        </div>
    }
</div>
