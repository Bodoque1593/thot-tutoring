@model Thot_projet.Models.Cours
@{
    ViewBag.Title = "Supprimer cours";
}
<h2>Supprimer</h2>
<h4>¿Seguro que deseas eliminar este curso?</h4>

<dl class="dl-horizontal">
    <dt>Nom</dt>
    <dd>@Model.Nom</dd>
    <dt>Niveau</dt>
    <dd>@Model.Niveau</dd>
</dl>

@using (Html.BeginForm())  // <-- sin especificar acción: postea a /Cours/Delete
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id)
    <input type="submit" value="Eliminar" class="btn btn-danger" />
    @Html.ActionLink("Cancelar", "Index", null, new { @class = "btn btn-default" })
}
