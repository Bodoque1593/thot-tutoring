@model Thot_projet.Models.Cours
@{
    ViewBag.Title = "Supprimer cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-head">
    <h2>Supprimer</h2>
    <small>Cette action est définitive</small>
    <hr class="soft-hr" />
</div>

<div class="thot-card">
    <h4>Voulez-vous effacer ce cours-là&nbsp;?</h4>

    <dl class="dl-horizontal" style="margin-top:15px;">
        <dt class="thot-label">Nom</dt>
        <dd>@Model.Nom</dd>
        <dt class="thot-label">Niveau</dt>
        <dd>@Model.Niveau</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(m => m.id)
        <input type="submit" value="Effacer" class="btn btn-danger" />
        @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-thot-ghost", style = "margin-left:8px;" })
    }
</div>
