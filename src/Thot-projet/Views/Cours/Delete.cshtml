@model Thot_projet.Models.Cours
@{
    ViewBag.Title = "Supprimer cours";
}
<h2>Supprimer</h2>
<h4>Voulez-Vous effacer ce cours-la?</h4>

<dl class="dl-horizontal">
    <dt>Nom</dt>
    <dd>@Model.Nom</dd>
    <dt>Niveau</dt>
    <dd>@Model.Niveau</dd>
</dl>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id)
    <input type="submit" value="Effacer" class="btn btn-danger" />
    @Html.ActionLink("Canceler", "Index", null, new { @class = "btn btn-default" })
}
