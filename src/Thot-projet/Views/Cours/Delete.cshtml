@model Thot_projet.Models.Cours
@{
    ViewBag.Title = "Supprimer cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .page-head {
        margin-bottom: 16px;
    }

        .page-head h2 {
            margin: 0 0 6px;
        }

    .soft-hr {
        margin: 8px 0 16px;
    }
</style>

<div class="page-head">
    <h2>Supprimer</h2>
    <hr class="soft-hr" />
</div>

<h4>Voulez-vous effacer ce cours-là&nbsp;?</h4>

<dl class="dl-horizontal">
    <dt>Nom</dt>
    <dd>@Model.Nom</dd>
    <dt>Niveau</dt>
    <dd>@Model.Niveau</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id)
    <input type="submit" value="Effacer" class="btn btn-danger" />
    @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-default", style = "margin-left:8px;" })
}
