@model Thot_projet.Models.ModuleCours
@{
    ViewBag.Title = "Supprimer le module";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Supprimer le module</h2>
<p>Êtes-vous sûr de vouloir supprimer ce module ?</p>

<dl class="dl-horizontal">
    <dt>Cours</dt>
    <dd>@(Model.Cours != null ? Model.Cours.Nom : "")</dd>
    <dt>Numéro</dt>
    <dd>@Model.Numero</dd>
    <dt>Titre</dt>
    <dd>@Model.Titre</dd>
</dl>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id)
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    @Html.ActionLink("Annuler", "Index", null, new { @class = "btn btn-default" })
}
