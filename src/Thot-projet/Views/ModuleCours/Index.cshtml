@model IEnumerable<Thot_projet.Models.ModuleCours>
@{
    ViewBag.Title = "Modules du cours";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Modules du cours</h2>

@if (TempData["ok"] != null)
{
    <div class="alert alert-success">@TempData["ok"]</div> 
}

<p>@Html.ActionLink("Créer un module", "Create", null, new { @class = "btn btn-primary" })</p>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Cours</th>
            <th>@Html.DisplayNameFor(m => m.First().Numero)</th>
            <th>@Html.DisplayNameFor(m => m.First().Titre)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var m in Model)
        {
            <tr>
                <td>@(m.Cours != null ? m.Cours.Nom : "")</td>
                <td>@Html.DisplayFor(_ => m.Numero)</td>
                <td>@Html.DisplayFor(_ => m.Titre)</td>
                <td>
                    @Html.ActionLink("Détails", "Details", new { id = m.id }, new { @class = "btn btn-info btn-sm" }) |
                    @Html.ActionLink("Éditer", "Edit", new { id = m.id }, new { @class = "btn btn-warning btn-sm" }) |
                    @Html.ActionLink("Supprimer", "Delete", new { id = m.id }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

