@model Thot_projet.Models.ModuleCours
@{ ViewBag.Title = "Modifier le module"; }
<h2>Modifier le module</h2>
<hr />
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.id)
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-horizontal">
        <div class="form-group">
            @Html.LabelFor(m => m.CoursId, "Cours", new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.DropDownList("CoursId", (SelectList)ViewBag.CoursId, "-- choisissez un cours --", new { @class = "form-control", required = "required" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Numero, new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.TextBoxFor(m => m.Numero, new { @class = "form-control", type = "number", min = "1", step = "1", required = "required" })
                @Html.ValidationMessageFor(m => m.Numero, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Titre, new { @class = "control-label col-md-2" })
            <div class="col-md-6">
                @Html.TextBoxFor(m => m.Titre, new { @class = "form-control", maxlength = "100", required = "required" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button type="submit" class="btn btn-success">Enregistrer</button>
                @Html.ActionLink("Retour", "Index", null, new { @class = "btn btn-default", style = "margin-left:8px" })
            </div>
        </div>
    </div>
}
@section Scripts { @@Scripts.Render("~/bundles/jqueryval") }
