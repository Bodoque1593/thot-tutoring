@using System
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Thot Projet</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" />
    <style>
        body {
            padding-top: 70px;
        }

        .navbar-brand {
            font-weight: 600;
        }

        .footer {
            margin-top: 40px;
            color: #777;
        }

        .alert + .alert {
            margin-top: 10px;
        }

        code.copyable {
            cursor: pointer;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#thot-navbar" aria-expanded="false">
                    <span class="sr-only">Basculer la navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Thot", "Index", "Cours", null, new { @class = "navbar-brand" })
            </div>

            <div class="collapse navbar-collapse" id="thot-navbar">
                <ul class="nav navbar-nav">
            
                    <li>@Html.ActionLink("Cours", "Index", "Cours")</li>
                    <li>@Html.ActionLink("Modules", "Index", "ModuleCours")</li>
                    <li>@Html.ActionLink("Ressources", "Index", "Ressource")</li>

                 
                    @if (Request.IsAuthenticated && Convert.ToString(Session["UserRole"]) == "Tuteur")
                    {
                        <li>@Html.ActionLink("Mon tableau (Tuteur)", "Dashboard", "Tuteur")</li>
                 
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Gérer <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("Gérer les cours", "Index", "Cours")</li>
                                <li>@Html.ActionLink("Gérer les modules", "Index", "ModuleCours")</li>
                                <li>@Html.ActionLink("Gérer les ressources", "Index", "Ressource")</li>
                            </ul>
                        </li>
                    }

            
                    @if (Request.IsAuthenticated && Convert.ToString(Session["UserRole"]) == "Etudiant")
                    {
                        <li>@Html.ActionLink("Mon espace (Étudiant)", "Dashboard", "Etudiant")</li>
                        <li>@Html.ActionLink("S'inscrire à un cours", "Browse", "Inscription")</li>
                        <li>@Html.ActionLink("Mes cours", "Index", "Inscription")</li>
                    }
                </ul>

                <ul class="nav navbar-nav navbar-right">
                    @if (Request.IsAuthenticated)
                    {
                        <li class="navbar-text">Bonjour, @Convert.ToString(Session["UserName"])</li>
                        <li>@Html.ActionLink("Déconnexion", "Logout", "Auth")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Connexion", "Login", "Auth")</li>
                        <li>@Html.ActionLink("Créer un compte", "Register", "Auth")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @if (TempData["ok"] != null)
        {
            <div class="alert alert-success" role="alert">
                <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
                @TempData["ok"]
            </div>
        }
        @if (TempData["err"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span>
                @TempData["err"]
            </div>
        }
        @if (TempData["mdp"] != null)
        {
            <div class="alert alert-info" role="alert">
                <strong>Nouveau mot de passe :</strong>
                <code class="copyable" title="Cliquer pour copier">@TempData["mdp"]</code>
                <span class="help-block" style="margin:5px 0 0">Conservez-le en lieu sûr. Il ne s’affichera qu’une seule fois.</span>
            </div>
        }

        @RenderBody()

        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - Thot Projet</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js"></script>
    <script>
        (function () {
            var el = document.querySelector("code.copyable");
            if (!el) return;
            el.addEventListener("click", function () {
                var r = document.createRange();
                r.selectNode(el);
                var sel = window.getSelection();
                sel.removeAllRanges();
                sel.addRange(r);
                try { document.execCommand("copy"); sel.removeAllRanges(); el.title = "Copié !"; } catch (e) { }
            });
        })();
    </script>
    @RenderSection("Scripts", required: false)
</body>
</html>
