@{
    var isAuth = Request.IsAuthenticated;
    var role = Convert.ToString(Session["UserRole"] ?? "");
    var user = Convert.ToString(Session["UserName"] ?? "");
    bool isEtud = string.Equals(role, "Etudiant", System.StringComparison.OrdinalIgnoreCase);
    bool isTut = string.Equals(role, "Tuteur", System.StringComparison.OrdinalIgnoreCase);
}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Thot Projet</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/css/bootstrap.min.css" />
    <style>
        /
        :root {
            --thot-bg: #0b1020; /* fond général sombre */
            --thot-panel: #111827; /* cartes */
            --thot-panel-soft: #1f2937;
            --thot-accent: #c9a227; /* or Thot */
            --thot-accent-soft: #f4e5c3; /* sable / papyrus */
            --thot-accent-dark: #8b6f16;
            --thot-text: #e5e7eb;
            --thot-muted: #9ca3af;
        }

        /* cabecera de página */
        .page-head {
            margin-bottom: 20px;
        }

            .page-head h2 {
                margin: 0 0 4px;
                font-weight: 600;
                color: var(--thot-accent-soft);
            }

            .page-head small {
                color: var(--thot-muted);
            }

        .soft-hr {
            margin: 8px 0 16px;
            border: 0;
            border-top: 1px solid rgba(201, 162, 39, 0.35);
        }

        /* tarjetas principales */
        .thot-card {
            background: linear-gradient(135deg, var(--thot-panel), var(--thot-panel-soft));
            border-radius: 10px;
            padding: 20px 22px;
            box-shadow: 0 12px 30px rgba(0, 0, 0, .45);
            border-top: 3px solid var(--thot-accent);
            color: var(--thot-text);
        }

        /* auth card más angosta */
        .thot-auth-card {
            max-width: 420px;
            margin: 0 auto;
        }

        /* labels y textos */
        .thot-label {
            color: var(--thot-accent-soft);
            font-weight: 500;
        }

        .thot-help {
            color: var(--thot-muted);
        }

        /* inputs: reusar Bootstrap pero con borde dorado suave al focus */
        .thot-input.form-control {
            background-color: #020617;
            border-color: #334155;
            color: var(--thot-text);
        }

            .thot-input.form-control:focus {
                border-color: var(--thot-accent);
                box-shadow: 0 0 0 1px rgba(201, 162, 39, .4);
            }

        /* botones */
        .btn-thot-primary {
            background: var(--thot-accent);
            border-color: var(--thot-accent-dark);
            color: #111827;
            font-weight: 600;
        }

            .btn-thot-primary:hover {
                background: var(--thot-accent-dark);
                border-color: var(--thot-accent-dark);
                color: #f9fafb;
            }

        .btn-thot-ghost {
            background: transparent;
            border-color: var(--thot-accent);
            color: var(--thot-accent-soft);
        }

            .btn-thot-ghost:hover {
                background: rgba(201, 162, 39, .1);
                color: var(--thot-accent-soft);
            }

        /* badges pequeñas (niveles, prix, etc.) */
        .thot-badge {
            display: inline-block;
            padding: 2px 8px;
            border-radius: 999px;
            font-size: 11px;
            text-transform: uppercase;
            letter-spacing: .06em;
            background: rgba(201, 162, 39, .15);
            color: var(--thot-accent-soft);
        }

        /* cards de cursos (vitrine) */
        .thot-course-card.thumbnail {
            background: linear-gradient(145deg, #020617, #020617);
            border-radius: 10px;
            overflow: hidden;
            border: 1px solid #1f2937;
        }

        .thot-course-card .caption {
            padding: 12px 14px 16px;
        }

        .thot-course-title {
            color: var(--thot-accent-soft);
            font-weight: 600;
        }

        .thot-course-meta {
            font-size: 12px;
            color: var(--thot-muted);
        }

    </style>
</head>
<body>
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#thot-navbar">
                    <span class="sr-only">Basculer la navigation</span>
                    <span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
                </button>
                @if (isAuth)
                {
                    @Html.ActionLink("Thot", "Index", "Cours", null, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Thot", "Login", "Auth", null, new { @class = "navbar-brand" })
                }
            </div>

            <div class="collapse navbar-collapse" id="thot-navbar">
                @if (isAuth)
                {
                    <ul class="nav navbar-nav">
                        @if (isEtud)
                        {
                            <li>@Html.ActionLink("Accueil", "Dashboard", "Etudiant")</li>
                            <li>@Html.ActionLink("S'inscrire à un cours", "Browse", "Inscription")</li>
                            <li>@Html.ActionLink("Mes cours", "Index", "Inscription")</li>
                            <li>@Html.ActionLink("Mes paiements", "Index", "Paiement")</li>
                            <li>@Html.ActionLink("Questions", "Index_Etudiant", "Question")</li>
                            <li>@Html.ActionLink("FAQ", "Index", "EntreeFAQ")</li>
                            <li>@Html.ActionLink("Demander rencontre", "DemandeRencontre", "Question")</li>
                        }
                        else if (isTut)
                        {
                            <!-- Lien principal du tableau de bord -->
                            <li>@Html.ActionLink("Accueil", "Dashboard", "Tuteur")</li>

                            <!-- Menu déroulant pour la gestion -->
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                    Gérer <span class="caret"></span>
                                </a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>@Html.ActionLink("Cours", "Index", "Cours")</li>
                                    <li>@Html.ActionLink("Modules", "Index", "ModuleCours")</li>
                                    <li>@Html.ActionLink("Ressources", "Index", "Ressource")</li>
                                    <li class="divider"></li>
                                    <li>@Html.ActionLink("Paiements (tous)", "IndexAll", "Paiement")</li>
                                    <li>@Html.ActionLink("Questions non résolues", "Index_Tuteur", "Question")</li>
                                </ul>
                            </li>

                            <!-- Liens directs hors du menu déroulant -->
                            <li>@Html.ActionLink("FAQ", "Index", "EntreeFAQ")</li>
                            <li>@Html.ActionLink("Vitrine cours", "Vitrine", "Cours")</li>

                            <!-- Nouveau lien vers les stats (microservice IA) -->
                            <li>@Html.ActionLink("Stats", "Index", "Stats")</li>
                        }
                    </ul>
                }

                <ul class="nav navbar-nav navbar-right">
                    @if (isAuth)
                    {
                        <li class="navbar-text">Bonjour, @user</li>
                        <li>@Html.ActionLink("Déconnexion", "Logout", "Auth")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Connexion", "Login", "Auth")</li>
                        <li>@Html.ActionLink("Créer un compte", "Register", "Auth")</li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @if (TempData["ok"] != null)
        {
            <div class="alert alert-success">
                <span class="glyphicon glyphicon-ok-sign"></span> @TempData["ok"]
            </div>
        }
        @if (TempData["err"] != null)
        {
            <div class="alert alert-danger">
                <span class="glyphicon glyphicon-exclamation-sign"></span> @TempData["err"]
            </div>
        }

        @RenderBody()
        <hr />
        <footer class="footer">
            <p>&copy; @DateTime.Now.Year - Thot Projet</p>
        </footer>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@3.4.1/dist/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
